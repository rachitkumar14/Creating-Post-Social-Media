<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <h2>Hi <%= user.name%></h2>

    <a href="/logout">Logout</a>
    <h3>What's in your mind</h3>
    <form method="post" action="/createdPost">
        <div class="mb-3">
            <label for="exampleInputPassword2" class="form-label">Content</label>
            <input type="text" class="form-control" id="exampleInputPassword2" name="content" placeholder="Type Your Post here">
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
            
      
      </div>

      <h3 class="mt-4">Your Posts</h3>

     <div class="d-flex flex-row flex-wrap w-full">
      <% user.posts.reverse().map((post)=>{ %>

        <div class="card mx-3 mt-2 bg-dark text-white" style="width: 17rem;">
          <div class="card-body">
            <h6 class="card-title"><%= user.username%></h6>
            <hr/>
            <p class="card-text"><%= post.content %></p>
          </div>
          <div class="d-flex mb-2">
            <div class="d-flex gap-2 ">
              <small><%= post.likes.length %></small>
            <a class="text-warning" href="/like/<%=post._id%>">
              <%= post.likes.indexOf(user._id)===-1 ? "Likes" : "Unlike" %>
            </a>
            </div>
           <div class="d-flex flex-row gap-4">
            <a class="text-white mx-3" href="/delete/<%= post._id %>" class="mx-5">Delete</a>
            <a class="text-white " href="/edit/<%= post._id %>" class="mx-5">Edit</a>
           </div>
            
          </div>
        </div>

    
           
     <!-- <h3><%= user.username%></h3>
     <h3><%= post.content %></h3> -->



     <% }) %>
     </div>

     <a href="/posts">Go to All Posts</a>

    
   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>